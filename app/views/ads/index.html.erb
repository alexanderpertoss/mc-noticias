<h1>Publicidad</h1>

<br><br>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Imagen</th>
      <th scope="col" colspan="2">Opciones</th>
    </tr>
  </thead>
  <tbody>
  	<% @ads.each do |ad| %>
  		<tr>
  		  <th scope="row"><%= ad.name %></th>
  		  <td><%= image_tag ad.main_image, class: "img-fluid" if ad.main_image.attached? %></td>
  		  <td><%= link_to "Ver", ad_path(ad), class: "btn btn-success" %></td>
  		  <td><%= link_to "Editar", edit_ad_path(ad), class: "btn btn-primary" %></td>
  		</tr>
  	<% end %>
    
  </tbody>
</table>