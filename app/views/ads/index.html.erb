<h1>Publicidad</h1>

<%= link_to "Crear publicidad", new_ad_path, class: "btn btn-primary" %>

<br><br>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Imagen</th>
      <th scope="col" colspan="3">Opciones</th>
    </tr>
  </thead>
  <tbody>
  	<% @ads.each do |ad| %>
  		<tr>
  		  <th scope="row"><%= ad.name %></th>
  		  <td><%= image_tag ad.main_image if ad.main_image.attached? %></td>
  		  <td><%= link_to "Ver", ad_path(ad), class: "btn btn-success" %></td>
  		  <td><%= link_to "Editar", edit_ad_path(ad), class: "btn btn-primary" %></td>
  		  <td><%= button_to "Eliminar", ad, method: :delete, data: { turbo_confirm: "EstÃ¡s seguro?" }, class: "btn btn-danger" %></td>
  		</tr>
  	<% end %>
    
  </tbody>
</table>