<%= form_with model: @podcast do |form| %>
  <div class="form-group">
    <%= form.label "Nombre" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Enlace a YouTube", style: "display: block" %>
    <%= form.text_field :link_to_podcast, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Aceptar", class: "btn btn-primary" %>
    <%= link_to "Cancelar", podcasts_path, class: "btn btn-danger" %>
  </div>
<% end %>