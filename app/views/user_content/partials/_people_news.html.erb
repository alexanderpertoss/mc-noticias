<!-- Popular News Start -->
                <div class="mb-3">
                    <div class="section-title mb-0">
                        <h4 class="m-0 text-uppercase font-weight-bold"><%= Category.find(4).name %></h4>
                    </div>
                    <div class="bg-white border border-top-0 p-3">
                        <% @people_articles.each do |article| %>
                            <div class="d-flex align-items-center border bg-white mb-3" style="height: 110px;">
                                <div class="col-lg-5">
                                    <% if !article.main_image_attachment.nil? %>
                                        <%= image_tag article.main_image, style: "max-width: 100%; max-height: 110px;" %>
                                    <% end %>    
                                </div>
                                <div class="col-lg-7">
                                    <div class=" px-3 d-flex flex-column justify-content-center ">
                                        <div class="mb-2">
                                            
                                            <a class="text-body" href=""><small><%= article.created_at.strftime("%d %b, %Y") %></small></a>
                                        </div>
                                        <%= link_to (truncate(article.title, length: 40)), article_path(article), class: "h6 m-0 text-secondary text-uppercase font-weight-bold" %>
                                    </div>    
                                </div>
                                
                            </div>
                            <br>
                        <% end %>
                    </div>
                </div>
                <!-- Popular News End -->