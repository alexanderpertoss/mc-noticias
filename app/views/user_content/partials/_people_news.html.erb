<!-- Popular News Start -->
<div class="mb-3">
    <div class="section-title mb-0">
        <h4 class="m-0 text-uppercase font-weight-bold"><%= Category.find(4).name %></h4>
    </div>
    <div class="bg-white border border-top-0 p-3">
        <% @people_articles.each do |article| %>
            <div class="d-flex align-items-center border border-left-0 bg-white mb-3" style="height: 110px;">
                <div class="col-lg-4">
                    <% if !article.main_image_attachment.nil? %>
                        <div class="responsive-img-wrapper">
                            <%= image_tag article.main_image, class: "img-fluid" %>
                        </div>
                    <% end %>    
                </div>
                <div class="col-lg-8">
                    <div class=" px-3 d-flex flex-column justify-content-center ">
                        <div class="mb-2">
                            
                            <a class="text-body" href=""><small><%= article.created_at.strftime("%d %b, %Y") %></small></a>
                        </div>
                        <%= link_to (truncate(article.title, length: 50)), article_path(article), class: "h6 m-0 text-secondary text-uppercase font-weight-bold people-news-title" %>
                    </div>    
                </div>
                
            </div>
        <% end %>
    </div>
</div>
<!-- Popular News End -->