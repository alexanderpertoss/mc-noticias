<h1>Noticias</h1>

<%= link_to "Crear", new_article_path, class: "btn btn-primary" %>
<br><br>

<%= form_tag articles_path, method: :get, class: "mb-3" do %>
  <div class="input-group">
    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "BÃºsqueda de noticias" %>
    <div class="input-group-append">
      <%= submit_tag "Buscar", class: "btn btn-primary" %>
